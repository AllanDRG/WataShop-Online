
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to the 'products' collection for development.
    // WARNING: These rules are very permissive and are NOT suitable for production.
    // You should secure your database appropriately before deploying.
    // For more information on securing your data, see:
    // https://firebase.google.com/docs/firestore/security/get-started
    match /products/{productId} {
      allow read: if true;
      allow write: if true; // Allows create, update, delete
    }

    // Example: More restrictive rules (uncomment and adapt as needed)
    // match /products/{productId} {
    //   // Allow anyone to read products
    //   allow read: if true;
    //   // Only allow authenticated users to create, update, delete products
    //   // You might want to further restrict this to specific admin UIDs
    //   allow write: if request.auth != null;
    // }

    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
